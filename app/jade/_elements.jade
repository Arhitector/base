			a(href="#").star-box__item
				.star-box__item__active
			a(href="#").star-box__item
				.star-box__item__active
			a(href="#").star-box__item
				.star-box__item__active
			a(href="#").star-box__item
				.star-box__item__active(style="width:14px;")
			a(href="#").star-box__item
		//end star-box
		h2 switch
		// start switch
		.switch
			input(type="checkbox")#switcher.switch__input
			label(for="switcher").switch__label
			span.switch__inner выкл 
			span.switch__inner вкл
		//end switch
		h2 table
		table(class="tablesaw tablesaw-swipe" data-mode="swipe" data-minimap="").tablesaw
