//- add script/link into head
block head
	script(src="//cdnjs.cloudflare.com/ajax/libs/less.js/1.7.5/less.min.js")
	link(rel="stylesheet"  href="../css/less/modules/_elements.less")

block content
	form(action="" method="get")
		h2 buttons
		a(href="#").button button link
		button.button button button
		input(type="submit" value="button input").button
		|:standart
		br
		a(href="#").button.hover button link
		button.button.hover button button
		input(type="submit" value="button input").button.hover
		|:hover
		br
		a(href="#").button.active button link
		button.button.active button button
		input(type="submit" value="button input").button.active
		|:active
		h2 buttons with gradient
		a(href="#").button.button_grad button link
		button.button.button_grad button button
		input(type="submit" value="button input").button.button_grad



		h2 Custom select
		select(name="").custom-select
			option(value="item1") Slope rating
			option(value="item2") Slope rating1
			option(value="item3") Slope rating2
		h2 Search field
		.search
			input(type="text" placeholder="Search").search__input
			input(type="submit" value="").search__submit
		.search.search_mod1
			input(type="text" placeholder="Search").search__input
			input(type="submit" value="").search__submit

		h2 Star box
		// start star-box
		.star-box.star-box_color1
			.star-box__item
				.star-box__item__active
			.star-box__item
				.star-box__item__active
			.star-box__item
				.star-box__item__active(style="width:10px;")
			.star-box__item
			.star-box__item
